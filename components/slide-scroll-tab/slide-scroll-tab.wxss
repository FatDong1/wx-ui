/* components/ slideTab/ slideTab.wxss */
.slide-container {
    display: flex;
    flex-wrap: wrap;
    background: #F6F6F6;
}

.slide-header {
    margin-bottom: 32rpx;
    display: flex;
    width: 100%;
    height:120rpx;
    line-height: 120rpx;
    background:rgba(255,255,255,1);
    color: #222222;
    font-size:32rpx;
}

.slide-tab {
    display: inline-block;
    flex: 1;
    height: 100%;
    text-align:center;
}

.slide-tab text {
    position: relative;
    display: inline-block;
    height: 100%;
}

.slide-tab text.active {
    color: #3164FF;
}

.slide-tab text.active:before {
    content: '';
    display: inline-block;
    position: absolute;
    bottom: 0rpx;
    left: -10rpx;
    right: -10rpx;
    height: 4rpx;
    background: #3164FF;
}

.tab-content {
    width: 100%;
    box-sizing: border-box;
}

.slide-content-item {
    background: #fff;    
}
