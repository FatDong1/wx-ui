/* pages/slide-scroll-tab-page/index.wxss */
.tab-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx 30rpx 30rpx 30rpx;
  width: 100%;
  height: 100%;
  background: #fff;
  box-sizing: border-box;
}
.form-item {
  margin-bottom: 30rpx;
  width: 300rpx;
  height: 300rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  line-height: 300rpx;
  background: #fff;  
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
    display:none;
}